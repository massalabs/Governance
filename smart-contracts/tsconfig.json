{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": false,
        "target": "es2022",
        "types": [
            "node"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "experimentalDecorators": true,
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}